<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcBlue"
        app:elevation="0dp"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchWrapper"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintTop_toBottomOf="@id/app_bar">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backNavButton"
                style="@style/IconOnlyButton"
                app:icon="@drawable/ic_arrow_back_white_24dp"
                android:layout_centerVertical="true"
                app:iconTint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/backNavButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_alignStart="@id/backNavButton"
                android:layout_alignParentEnd="true"
                app:queryBackground="@drawable/rounded_search_view"
                app:submitBackground="@drawable/rounded_search_view"
                android:background="@drawable/rounded_search_view"
                app:iconifiedByDefault="false"
                app:queryHint="@string/search_for_a_part"
                app:searchIcon="@drawable/ic_baseline_search_24"
                android:contentDescription="@string/voice_and_scan_icon" />

            <ImageView
                android:id="@+id/barcodeImage"
                android:layout_width="wrap_content"
                android:src="@drawable/barcodeandmic"
                android:layout_gravity="center_vertical|end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:translationZ="1000dp"
                app:tint="@color/text_colour_2"
                android:contentDescription="@string/image"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <uk.co.firstchoice_cs.store.shop_widgets.DetailMenuWidget
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemLeadingIconDMW="@drawable/ic_barcode_scan_grey600_24dp"
        app:itemTrailingIconDMW="@drawable/ic_navigate_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:subtitleTextDMW="Scan a First Choice barcode to search for a part"
        app:titleTextDMW="Scan a Barcode" />

    <View android:id="@+id/div1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scanButton"
        style="@style/Divider" />


    <uk.co.firstchoice_cs.store.shop_widgets.DetailMenuWidget
        android:id="@+id/speechButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemLeadingIconDMW="@drawable/ic_mic_black_24dp"
        app:itemTrailingIconDMW="@drawable/ic_navigate_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div1"
        app:subtitleTextDMW="Search by speaking into your phone"
        app:titleTextDMW="Speech Recognition" />

    <View android:id="@+id/div2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speechButton"
        style="@style/Divider" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recentSearchesText"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SectionHeader"
        app:layout_constraintTop_toBottomOf="@id/div2"
        android:text="@string/recent_searches" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearButton"
        style="@style/DarkPurpleMaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/clear"
        app:layout_constraintBaseline_toBaselineOf="@id/recentSearchesText"
        app:layout_constraintEnd_toEndOf="parent" />



    <View android:id="@+id/thickBlueLine"
        android:layout_width="match_parent"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toBottomOf="@id/recentSearchesText"
        android:layout_height="2dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            app:layout_constraintTop_toBottomOf="@id/thickBlueLine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/light_background"
            tools:itemCount="10"
            tools:listitem="@layout/simple_search_item" />



</androidx.constraintlayout.widget.ConstraintLayout>