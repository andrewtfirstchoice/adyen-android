<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/priceExVATText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_bold"
            android:singleLine="true"
            android:text="@string/zero_pounds"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/text_colour_1"
            android:textSize="19sp"
            tools:text="£0.00" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/exVat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/nunitosans_regular"
            android:singleLine="true"
            android:text="@string/ex_vat"
            app:layout_constraintStart_toEndOf="@id/priceExVATText"
            app:layout_constraintBaseline_toBaselineOf="@id/priceExVATText"
            android:textColor="@color/text_colour_1"
            android:textSize="12sp" />


    <View
        android:id="@+id/dividingLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/priceExVATText"
        android:layout_width="100dp"
        style="@style/Divider"/>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/priceIncVATText"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_extrabold"
            app:layout_constraintEnd_toStartOf="@id/exVat"
            app:layout_constraintTop_toBottomOf="@id/dividingLine"
            android:singleLine="true"
            android:text="@string/zero_pounds"
            android:gravity="end"
            android:textColor="@color/text_colour_1"
            android:textSize="15sp"
            tools:text="£0.00" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/nunitosans_regular"
            app:layout_constraintStart_toEndOf="@id/priceExVATText"
            app:layout_constraintBaseline_toBaselineOf="@id/priceIncVATText"
            android:singleLine="true"
            android:text="@string/inc_vat"
            android:textColor="@color/text_colour_1"
            android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>