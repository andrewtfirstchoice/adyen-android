<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinator"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="uk.co.firstchoice_cs.basket.AddNewAddressFragment"
    app:layout_scrollFlags="noScroll|enterAlways|snap"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:background="@color/light_background">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                app:statusBarForeground="@color/fcBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    style="@style/FCToolBar"
                    app:layout_scrollFlags="scroll|enterAlways|snap"
                    app:menu="@menu/action_menu_add_new_address"
                    app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
                    android:theme="@style/SearchBarTheme"
                    app:title="Add new Address" />
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                style="@style/SectionHeader"
                android:text="@string/contact_details" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:hint="@string/email_address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:backgroundTint="@color/white"
                    android:textSize="14sp"
                    android:maxLength="50"
                    android:text="a.thompson887@btinternet.com"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/first_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:backgroundTint="@color/white"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:text="Andrew"
                    android:maxLength="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/last_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textSize="14sp"
                    android:text="Thompson"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:maxLength="50"
                    android:inputType="text"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/company">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/companyEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textSize="14sp"
                    android:text="Company"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:maxLength="50"
                    android:inputType="text"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/phone_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:maxLength="20"
                    android:text="Mobile"
                    android:inputType="phone"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:text="@string/address_search"
                style="@style/SectionHeader" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:hint="@string/search_for_location">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/locationSearch"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    style="@style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:textColor="@color/text_colour_1"
                    android:lines="1" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:text="@string/enter_your_address"
                style="@style/SectionHeader" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/country"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/country"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="United Kingdom"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/text_colour_2"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
               style="@style/Divider"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/text_colour_2"
                android:textSize="14sp"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/address_line_1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressLine1"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="@color/text_colour_2"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLength="50"
                    android:text="24 Meadowbank Grange"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/text_colour_2"
                android:textSize="14sp"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/address_line_2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressLine2"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textColor="@color/text_colour_2"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLength="50"
                    android:text="Great Wyrely"
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/city">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/townEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:inputType="text"
                    android:text="Walsall"
                    android:maxLength="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/county">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/countyFieldEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"
                    android:inputType="text"
                    android:text="West Midlands"
                    android:maxLength="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:counterOverflowTextAppearance="@style/TextLimitError"
                android:hint="@string/postcode">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postcodeEdit"
                    android:fontFamily="@font/nunitosans_regular"
                    android:textSize="14sp"
                    android:maxLength="10"
                    android:text="WS6 6PT"
                    android:backgroundTint="@color/white"
                    android:inputType="textPostalAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/setAsDefaultAddressCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:text="@string/set_as_default_delivery_address"
                    android:textColor="@color/text_colour_1"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/setAsDefaultAddressCheckBox"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/setAsDefaultBillingCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="0dp"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:text="@string/set_as_default_billing_address"
                    android:textColor="@color/text_colour_1"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/setAsDefaultBillingCheckBox"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>