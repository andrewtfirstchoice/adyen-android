<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:elevation="8dp"
    android:focusable="true"
    app:layout_anchorGravity="bottom"
    tools:background="@color/black">

    <View
        android:id="@+id/backClicker"
        android:translationZ="100dp"
        android:layout_width="100dp"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"/>

    <View
        android:id="@+id/clearClicker"
        android:layout_alignParentEnd="true"
        android:translationZ="100dp"
        android:layout_width="100dp"
        android:layout_height="50dp"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:elevation="8dp"
        android:focusable="false"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:rippleColor="@color/fcBlue">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="24dp"
            android:scaleType="centerCrop">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                style="@style/IconOnlyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                app:iconTint="@color/text_colour_1" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/clearButton"
                android:layout_toEndOf="@id/closeButton"
                android:fontFamily="@font/nunitosans_bold"
                android:gravity="center"
                android:lines="1"
                android:text="@string/filters"
                android:textColor="@color/text_colour_2"
                android:textSize="13sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_colour_2"
                android:text="@string/clear_all"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <RelativeLayout
        android:id="@+id/subFilterScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:translationZ="100dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textFilter"
            app:iconifiedByDefault="false"
            app:defaultQueryHint="@string/search"
            android:queryHint="Search by Manufacturer"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:background="@color/white"
            tools:itemCount="3"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/simple_filter_item_checked"
            android:layout_below="@id/searchView"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mainFilterScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:translationZ="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/Divider" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/eqItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:rippleColor="@color/fcBlue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/eqTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:singleLine="true"
                        android:text="@string/equipment_type"
                        android:textColor="#222222"
                        android:textSize="14sp"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/eqDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@id/eqTrailing"
                        android:fontFamily="@font/nunitosans_regular"
                        android:singleLine="true"
                        android:textColor="#222222"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:text="2 Selected"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/eqTrailing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_navigate_next"
                        android:contentDescription="@string/image"
                        app:tint="@color/text_colour_1"
                        android:visibility="visible"
                        tools:visibility="visible" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <View style="@style/Divider"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:rippleColor="@color/fcBlue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/manTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:singleLine="true"
                        android:text="@string/manufacturer"
                        android:textColor="#222222"
                        android:textSize="14sp"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/manDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@id/manTrailing"
                        android:fontFamily="@font/nunitosans_regular"
                        android:singleLine="true"
                        android:textColor="#222222"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:text="2 Selected"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/manTrailing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_navigate_next"
                        app:tint="@color/text_colour_1"
                        android:visibility="visible"
                        android:contentDescription="@string/image"
                        tools:visibility="visible" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <View style="@style/Divider" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/classItem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white"
                app:rippleColor="@color/fcBlue">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/classTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nunitosans_regular"
                        android:singleLine="true"
                        android:text="@string/part_category"
                        android:textColor="#222222"
                        android:textSize="14sp"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/classDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@id/classTrailing"
                        android:fontFamily="@font/nunitosans_regular"
                        android:singleLine="true"
                        android:textColor="#222222"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:text="2 Selected"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/classTrailing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_navigate_next"
                        android:contentDescription="@string/image"
                        app:tint="@color/text_colour_1"
                        android:visibility="visible"
                        tools:visibility="visible" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <View style="@style/Divider"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyButton"
            style="@style/LargeRedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:fontFamily="@font/nunitosans_bold"
            android:text="@string/apply"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/fc_progress"
            android:indeterminateDuration="1000"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>