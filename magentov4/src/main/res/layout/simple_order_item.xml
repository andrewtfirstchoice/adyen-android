<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/orderNumberTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunitosans_regular"
            android:singleLine="true"
            tools:text="Order Number #0000123456"
            tools:visibility="visible"
            android:textColor="#141414"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/endguideline"
            android:textSize="15sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/statusTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderNumberTxt"
            app:layout_constraintEnd_toStartOf="@id/endguideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunitosans_semibold"
            android:singleLine="true"
            tools:text="Shipped"
            tools:visibility="visible"
            android:textColor="#141414"
            android:textSize="13sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dateTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statusTxt"
            app:layout_constraintEnd_toStartOf="@id/endguideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunitosans_regular"
            android:singleLine="true"
            tools:text="Date Ordered 11/10/2019"
            tools:visibility="visible"
            android:textColor="#141414"
            android:textSize="12sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/numItemsTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateTxt"
            app:layout_constraintEnd_toStartOf="@id/endguideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunitosans_regular"
            android:singleLine="true"
            tools:text="2 Items"
            tools:visibility="visible"
            android:textColor="#141414"
            android:textSize="12sp" />


    <ImageView
        android:id="@+id/check"
        android:src="@drawable/ic_navigate_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/endguideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        style="@style/trailing_check" />
</androidx.constraintlayout.widget.ConstraintLayout>