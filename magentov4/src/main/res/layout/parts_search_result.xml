<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:elevation="8dp"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:rippleColor="@color/fcBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/part_image"
            android:cropToPadding="true"
            android:src="@drawable/placeholder"
            app:layout_constraintEnd_toStartOf="@id/endguideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/placeholder" />


        <ImageView
            android:id="@+id/threeSixtyIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            android:cropToPadding="true"
            app:tint="@color/blue_header_line"
            android:src="@drawable/threesixtydisc"
            app:layout_constraintEnd_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/threesixtydisc" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/manufacturerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_regular"
            android:singleLine="true"
            android:textColor="@color/text_colour_1"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/endguideline"
            app:layout_constraintTop_toTopOf="@id/image"
            tools:text="Rational" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/partIDText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/nunitosans_bold"
            android:singleLine="true"
            android:textColor="@color/text_colour_1"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/endguideline"
            app:layout_constraintTop_toBottomOf="@id/manufacturerText"
            tools:text="56.00.210" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_regular"
            android:lines="2"
            android:textAllCaps="true"
            android:textColor="@color/text_colour_1"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="@id/endguideline"
            app:layout_constraintTop_toBottomOf="@id/partIDText"
            tools:text="DETERGENT CLEANER TABLETS 100PCS" />


        <ImageView
            android:id="@+id/tick"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/endguideline"
            app:layout_constraintTop_toBottomOf="@id/descriptionText"
            tools:srcCompat="@drawable/in_stock_tick"
            android:contentDescription="@string/in_stock_tick" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="bottom"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:layout_marginStart="4dp"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tick"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            app:layout_constraintStart_toEndOf="@id/tick"
            app:layout_constraintTop_toTopOf="@id/tick"
            tools:text="25 in stock" />

        <com.google.android.material.chip.Chip
            android:id="@+id/discount"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_toStartOf="@id/oldPrice"
            android:fontFamily="@font/nunitosans_regular"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:visibility="visible"
            android:visibility="invisible"
            app:checkedIconVisible="false"
            app:chipCornerRadius="2dp"
            app:chipMinHeight="75dp"
            app:chipStartPadding="0dp"
            app:chipSurfaceColor="@color/fcRed"
            app:layout_constraintTop_toBottomOf="@id/inStock"
            app:layout_constraintEnd_toStartOf="@id/oldPrice"
            tools:text="-25%" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/oldPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/strike_through"
            android:fontFamily="@font/nunitosans_regular"
            android:singleLine="true"
            android:text="@string/ex_vat"
            tools:visibility="visible"
            android:visibility="invisible"
            android:textColor="@color/text_colour_1"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/inStock"
            app:layout_constraintEnd_toStartOf="@id/guideline2"
            tools:text="Â£1215.00" />



        <uk.co.firstchoice_cs.core.widgets.PriceWidget
            android:id="@+id/priceWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:layout_constraintTop_toBottomOf="@id/discount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/discount" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/FCProgressSpinner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/priceWidget"
            app:layout_constraintTop_toTopOf="@id/priceWidget"
            app:layout_constraintStart_toStartOf="@id/priceWidget"
            app:layout_constraintBottom_toBottomOf="@id/priceWidget"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/next_arrow"
            android:src="@drawable/ic_navigate_next"
            app:tint="@color/text_colour_1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>