<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="uk.co.firstchoice_cs.core.shared.DeliveryAddressesFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:statusBarForeground="@color/fcBlue">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/FCToolBar"
            android:theme="@style/SearchBarTheme"
            app:menu="@menu/action_menu_delivery_addresses"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:title="Select Address" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/header"
        style="@style/SectionHeader"
        android:text="@string/addresses"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintStart_toStartOf="parent" />

     <View
         android:id="@+id/headerText"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/header"
         style="@style/Divider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        tools:itemCount="3"
        tools:listitem="@layout/delivery_address_list_item" />

</androidx.constraintlayout.widget.ConstraintLayout>