<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_anchorGravity="bottom">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:navigationIcon="@drawable/ic_close_white_24dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitle="Search using the options below"
        app:subtitleTextColor="@color/white"
        app:title="Search for a manual"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:titleTextColor="@color/white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_catalogues_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="32dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:text="@string/view_catalogues"
            android:textAllCaps="false" />



            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/or"
                app:layout_constraintTop_toTopOf="@id/or"
                app:layout_constraintBottom_toBottomOf="@id/or"
                android:background="@color/fcDarkGrey" />

            <TextView
                android:id="@+id/or"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/view_catalogues_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/or" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_catalogues_button"
                app:layout_constraintStart_toEndOf="@id/or"
                app:layout_constraintTop_toTopOf="@id/or"
                app:layout_constraintBottom_toBottomOf="@id/or"
                android:background="@color/black" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/or"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/select_a_manufacturer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/text_colour_1"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:constraintSet="@id/man"
            app:layout_constraintTop_toBottomOf="@id/man"
            android:hint="@string/select_an_equipment_type">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/equipmenttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/text_colour_1"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:constraintSet="@id/man"
        app:layout_constraintTop_toBottomOf="@id/eq"
        android:hint="@string/select_a_model">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/models"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/text_colour_1"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/show_results_button"
            style="@style/SmallRedButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/show_results"
            app:layout_constraintTop_toBottomOf="@id/mod"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/ic_search_white"
            app:iconTint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>