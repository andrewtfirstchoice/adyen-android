<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:showIn=".StoreFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fcBlue"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/searchWrapper"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintTop_toBottomOf="@id/app_bar">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="0dp"
                app:queryBackground="@drawable/rounded_search_view"
                app:submitBackground="@drawable/rounded_search_view"
                android:background="@drawable/rounded_search_view"
                app:iconifiedByDefault="false"
                app:queryHint="@string/search_for_a_part"
                app:voiceIcon="@drawable/ic_mic_black_24dp"
                app:searchIcon="@drawable/ic_baseline_search_24"
                android:contentDescription="@string/voice_and_scan_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/barcodeandmic"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="32dp"
                android:translationZ="1000dp"
                app:tint="@color/text_colour_2"
                android:contentDescription="@string/image"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/clicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:color/transparent"
                android:translationZ="1000dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_bar" />


        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/nestedScrollView">

            <uk.co.firstchoice_cs.store.shop_widgets.RootMenuWidget
                android:id="@+id/manufacturerSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:itemLeadingIconRMW="@drawable/root_button_icon_manufacturer"
                app:subtitleTextRMW="Browse our parts catalogue by manufacturer"
                app:titleTextRMW="Search by Manufacturer" />


            <uk.co.firstchoice_cs.store.shop_widgets.RootMenuWidget
                android:id="@+id/categorySearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:itemLeadingIconRMW="@drawable/root_button_icon_category"
                app:subtitleTextRMW="Browse our parts catalogue by part category"
                app:titleTextRMW="Search by Part Category" />

            <uk.co.firstchoice_cs.store.shop_widgets.RootMenuWidget
                android:id="@+id/equipmentSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:itemLeadingIconRMW="@drawable/root_button_icon_equipment"
                app:subtitleTextRMW="Browse our parts catalogue by equipment type"
                app:titleTextRMW="Search by Equipment Type" />

            <uk.co.firstchoice_cs.store.shop_widgets.RootMenuWidget
                android:id="@+id/documentSearchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                app:itemLeadingIconRMW="@drawable/documents"
                app:subtitleTextRMW="Browse our manuals, documents &amp; catalogues"
                app:titleTextRMW="Search for a Manual" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/you_recently_viewed"
                    style="@style/SectionTitle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/text_colour_1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/recentlyViewedRecyclerWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="275dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recentlyViewedRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="@id/recentlyViewedRecyclerWrapper"
                        app:layout_constraintLeft_toLeftOf="@id/recentlyViewedRecyclerWrapper"
                        app:layout_constraintTop_toTopOf="@id/recentlyViewedRecyclerWrapper"
                        tools:itemCount="10"
                        tools:listitem="@layout/root_card_recently_viewed"
                        tools:visibility="visible" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/noRecentlyViewedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="50dp"
                        android:fontFamily="@font/nunitosans_bold"
                        android:text="@string/you_have_no_recently_viewed_items"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/recentlyViewedRecyclerWrapper"
                        app:layout_constraintEnd_toEndOf="@id/recentlyViewedRecyclerWrapper"
                        app:layout_constraintStart_toStartOf="@id/recentlyViewedRecyclerWrapper"
                        app:layout_constraintTop_toTopOf="@id/recentlyViewedRecyclerWrapper">

                    </com.google.android.material.textview.MaterialTextView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
